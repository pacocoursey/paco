{
  "name": "blog",
  "version": "1.0.0",
  "scripts": {
    "lint": "prettier --write '**/*.js'",
    "dev": "next -p 3003",
    "build": "node ./lib/generate-posts.js && yarn rss && next build",
    "watch": "nodemon ./lib/generate-posts.js",
    "rss": "node lib/rss",
    "new": "node lib/db"
  },
  "pre-commit": "lint",
  "license": "MIT",
  "dependencies": {
    "classnames": "^2.2.6",
    "intersection-observer": "^0.7.0",
    "marked": "^0.7.0",
    "next": "^9.2.2",
    "prismjs": "^1.17.1",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-intersection-observer": "^8.24.2",
    "rss": "^1.2.2"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.2",
    "eslint": "^6.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-react": "^7.14.3",
    "lowdb": "^1.0.0",
    "nodemon": "^1.19.1",
    "open-graph-scraper": "^3.6.2",
    "prettier": "^1.18.2",
    "prompts": "^2.2.1",
    "yaml-front-matter": "^4.0.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true,
        "impliedStrict": true,
        "experimentalObjectRestSpread": true
      },
      "allowImportExportEverywhere": true
    },
    "plugins": [
      "react",
      "import"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "env": {
      "es6": true,
      "browser": true,
      "node": true
    },
    "rules": {
      "func-names": [
        "error",
        "as-needed"
      ],
      "no-shadow": "error",
      "import/no-mutable-exports": "error",
      "import/no-anonymous-default-export": [
        "error",
        {
          "allowArray": true,
          "allowArrowFunction": true,
          "allowLiteral": true,
          "allowObject": true
        }
      ],
      "no-extra-semi": 0,
      "react/prop-types": 0,
      "react/react-in-jsx-scope": 0,
      "react/no-unescaped-entities": 0,
      "react/jsx-no-target-blank": 0,
      "react/no-string-refs": 0
    }
  },
  "eslintIgnore": [
    "**/node_modules/**/**",
    "**/.next/**/**"
  ]
}
